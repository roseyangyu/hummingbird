<robot name="rotor" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="rotor" params="name parent *origin">

        <joint name='${name}_joint' type='revolute'>
            <parent link="${parent}" />
            <child link="${name}" />
            <xacro:insert_block name="origin"/>
            <axis xyz="0 1 0" />
            <dynamics damping="1.0" />
            <limit lower="-1.05" upper="1.05" />
        </joint>

        <link name="${name}">
            <inertial>
                <mass>0.005</mass>
                <inertia ixx="9.75e-07" ixy="0" ixz="0" iyy="0.000166704" iyz="0" izz="0.000167604"/>
            </inertial>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh uri="model://hummingbird/meshes/iris_prop_cw.dae" />
                </geometry>
            </collision>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <box size="0.015 0.22 0.07347" />
                </geometry>
            </visual>
        </link>
    </xacro:macro>
</robot>
